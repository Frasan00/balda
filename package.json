{
  "name": "balda-js",
  "version": "0.0.1",
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "repository": "git@github.com:Frasan00/balda-js.git",
  "author": "Frasan00 <francesco.sangiovanni.7@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch test/index.ts",
    "dev:bun": "bun run --watch test/index.ts",
    "dev:deno": "deno task dev",
    "build": "rm -rf lib && tsup",
    "build:test": "rm -rf lib && tsup && rm -rf lib",
    "build:prod": "rm -rf lib && tsup --minify",
    "format": "prettier --write \"**/*.ts\""
  },
  "devDependencies": {
    "@types/deno": "^2.3.0",
    "@types/node": "^24.0.4",
    "@types/ws": "^8.18.1",
    "autocannon": "^8.0.0",
    "bun-types": "^1.2.17",
    "eslint": "^9.29.0",
    "node-gyp": "^11.2.0",
    "prettier": "^3.6.2",
    "socket.io": "^4.8.1",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "ws": "^8.18.2"
  },
  "bin": {
    "balda": "lib/cli.js"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.37",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "glob": "^11.0.3",
    "pino": "^9.7.0"
  },
  "tags": [
    "framework",
    "http",
    "server",
    "node",
    "bun",
    "deno",
    "backend"
  ]
}
